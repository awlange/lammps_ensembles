#TEMPER: run 500, swap 50, temp 305.0, fix 1, seed 0, dumpswap 1 

variable        replicaID   string  3
variable        replicaTemp string  305.0

# Solvated 5-mer peptide

units		real
atom_style	full

pair_style	lj/charmm/coul/long 8.0 10.0
bond_style      harmonic
angle_style     charmm
dihedral_style  charmm
improper_style  harmonic
kspace_style	pppm 0.0001

read_data	data.peptide.${replicaID}

neighbor	2.0 bin
neigh_modify	delay 5

timestep	2.0

group		peptide type <= 12

fix		1 all nvt temp ${replicaTemp} ${replicaTemp} 100.0 tchain 1
fix		4 all shake 0.0001 10 100 b 4 6 8 10 12 14 18 a 31

# Dump for viewing
dump		1 peptide custom 50 dump.lammpstrj.${replicaTemp} id xu yu zu
dump_modify     1 sort id

thermo_style	custom step temp etotal pe ke epair ebond
thermo		10

